---
import BrowserWindow from './BrowserWindow.astro';
---

<BrowserWindow url="http://voltrux.com/footer">
  <footer class="footer-v1">
    <div class="footer-bg"></div>
    <div class="container">
      <div class="footer-grid">
        <div class="footer-brand">
          <h2><span class="vol">VOLT</span><span class="trux">RUX</span></h2>
          <p class="footer-tagline">Redefining Electric Luxury Trucks with cutting-edge technology and unmatched performance.</p>
          <div class="social-icons">
            <a href="#">FB</a>
            <a href="#">TW</a>
            <a href="#">IN</a>
          </div>
        </div>
        <div class="footer-links">
          <h4>Quick Links</h4>
          <ul>
            <li><a href="#">Home</a></li>
            <li><a href="#">Models</a></li>
            <li><a href="#">Technology</a></li>
            <li><a href="#">About</a></li>
          </ul>
        </div>
        <div class="footer-links">
          <h4>Models</h4>
          <ul>
            <li><a href="#">Voltrux V-8</a></li>
            <li><a href="#">Voltrux Executive</a></li>
            <li><a href="#">Voltrux Sport</a></li>
            <li><a href="#">Compare Models</a></li>
          </ul>
        </div>
        <div class="footer-links">
          <h4>Support</h4>
          <ul>
            <li><a href="#">Contact</a></li>
            <li><a href="#">Find a Dealer</a></li>
            <li><a href="#">Service Centers</a></li>
            <li><a href="#">Owner's Portal</a></li>
          </ul>
        </div>
        <div class="footer-newsletter">
          <h4>Join the Revolution</h4>
          <form class="footer-form" onsubmit="event.preventDefault()">
            <input type="email" placeholder="Enter your email" />
            <button type="submit">Subscribe</button>
          </form>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; 2025 Voltrux Motors. All rights reserved.</p>
        <div class="legal-links">
          <a href="#">Privacy Policy</a>
          <a href="#">Terms of Service</a>
        </div>
      </div>
    </div>
  </footer>
</BrowserWindow>